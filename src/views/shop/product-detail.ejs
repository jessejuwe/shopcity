<%- include('../partials/head.ejs', { pageTitle: product.title }) %>
<body>
  <%- include('../partials/nav.ejs') %>

  <main class="centered">
    <div class="product__detail">
      <div class="product__content">
        <h1 class="product__content-title"><%= product.title %></h1>
        <h2 class="product__content-price">
          $<%= (+product.price).toFixed(2) %>
        </h2>
        <p class="product__content-description"><%= product.description %></p>

        <div class="card__actions">
          <%- include('../partials/add-to-cart.ejs') %>
        </div>
      </div>

      <div class="product__image">
        <img src="<%= product.imageUrl %>" alt="<%= product.title %>" />
      </div>
    </div>
  </main>
  <%- include('../partials/end.ejs') %>
</body>
